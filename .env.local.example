# CreatorFlow Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# =============================================================================
# PHASE 1 - MUST HAVE APIs
# =============================================================================

# TikTok Shop API (Required for core functionality)
TIKTOK_SHOP_APP_KEY=your_app_key_here
TIKTOK_SHOP_APP_SECRET=your_app_secret_here
TIKTOK_SHOP_REDIRECT_URI=http://localhost:3000/api/auth/tiktok/callback
TIKTOK_SHOP_WEBHOOK_SECRET=your_webhook_secret_here

# Supabase (Database, Auth, Real-time)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
DATABASE_URL=postgresql://postgres:your_password@db.your-project.supabase.co:5432/postgres

# Stripe (Subscription Billing)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Shippo (Primary Shipping)
SHIPPO_API_TOKEN=shippo_test_your_token_here
SHIPPO_WEBHOOK_SECRET=your_webhook_secret_here

# Resend (Email Notifications)
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=noreply@your-domain.com

# =============================================================================
# PHASE 2 - SHOULD HAVE APIs
# =============================================================================

# EasyPost (Secondary Shipping)
EASYPOST_API_KEY=EZTKTEST_your_key_here

# PostHog (Analytics)
NEXT_PUBLIC_POSTHOG_KEY=phc_your_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Tolgee (Localization - Development)
NEXT_PUBLIC_TOLGEE_API_URL=https://app.tolgee.io
NEXT_PUBLIC_TOLGEE_API_KEY=your_tolgee_api_key_here

# =============================================================================
# PHASE 3 - COULD HAVE APIs
# =============================================================================

# OpenAI (AI Features)
OPENAI_API_KEY=sk-your_openai_key_here

# =============================================================================
# APP CONFIGURATION
# =============================================================================

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_random_secret_here_min_32_chars
NODE_ENV=development

# App Settings
APP_URL=http://localhost:3000
APP_NAME=CreatorFlow
APP_DESCRIPTION=TikTok Shop Fulfillment Automation

# Feature Flags
FEATURE_TIKTOK_INTEGRATION=true
FEATURE_MULTI_CARRIER_SHIPPING=false
FEATURE_AI_FEATURES=false

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Debugging
DEBUG=false
LOG_LEVEL=info

# Testing
TEST_DATABASE_URL=postgresql://postgres:test@localhost:5432/creatorflow_test
TEST_STRIPE_SECRET_KEY=sk_test_your_test_key_here

# =============================================================================
# SECURITY NOTES
# =============================================================================

# 1. Never commit this file to version control
# 2. Use different keys for development and production
# 3. Rotate keys regularly (quarterly for production)
# 4. Monitor API usage for unusual activity
# 5. Use least privilege principle for API permissions

# =============================================================================
# QUICK SETUP CHECKLIST
# =============================================================================

# [ ] TikTok Shop developer account created
# [ ] Supabase project created with password saved
# [ ] Stripe account setup with customer portal activated
# [ ] Shippo account created with API token
# [ ] Resend account setup with domain verified
# [ ] Tolgee project created with API key
# [ ] All credentials filled in above
# [ ] Run: bun run test-apis to verify connections