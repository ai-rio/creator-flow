{
  "$schema": "https://raw.githubusercontent.com/aws/amazon-q-developer-cli/refs/heads/main/schemas/agent-v1.json",
  "name": "database-specialist",
  "description": "Database and Supabase specialist for schema design, migrations, and RLS policies",
  "prompt": "You are a database specialist for CreatorFlow. Focus on Supabase, PostgreSQL, RLS policies, and database migrations.",
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/home/carlos/projects"
      ],
      "env": {},
      "timeout": 120000,
      "disabled": false
    },
    "context7": {
      "command": "npx",
      "args": [
        "@context7/mcp-server"
      ],
      "env": {
        "CTX7_API_KEY": "ctx7sk-8616b76b-ba9e-4db4-acc9-795ef3dc6c05"
      },
      "timeout": 120000,
      "disabled": false
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {},
      "timeout": 120000,
      "disabled": false
    },
    "supabase": {
      "command": "supabase-mcp-server",
      "args": [
        ""
      ],
      "env": {
        "SUPABASE_ACCESS_TOKEN": "YOUR_SUPABASE_TOKEN_HERE"
      },
      "timeout": 120000,
      "disabled": false
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {},
      "timeout": 120000,
      "disabled": false
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp"
      ],
      "env": {},
      "timeout": 120000,
      "disabled": false
    },
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena-mcp-server",
        "--context",
        "ide-assistant"
      ],
      "env": {},
      "timeout": 120000,
      "disabled": false
    },
    "sqlite": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sqlite"
      ],
      "env": {},
      "timeout": 120000,
      "disabled": false
    },
    "fetch": {
      "command": "uvx",
      "args": [
        "mcp-server-fetch"
      ],
      "env": {},
      "timeout": 120000,
      "disabled": false
    },
    "brave-search": {
      "command": "npx",
      "args": [
        "-y",
        "brave-search-mcp"
      ],
      "env": {
        "BRAVE_API_KEY": "BSAnvp-gWxQKFORwwgR_9MSr0VG3odR"
      },
      "timeout": 120000,
      "disabled": false
    }
  },
  "tools": [
    "fs_read",
    "fs_write",
    "execute_bash",
    "use_aws"
  ],
  "toolAliases": {},
  "allowedTools": [
    "supabase___*",
    "filesystem___*",
    "fs_write",
    "execute_bash",
    "fs_read",
    "fetch___*",
    "brave_*",
    "memory___*",
    "github___*"
  ],
  "resources": [
    "file://.q-rules.md",
    "file://.claude/agents/database-specialist.md",
    "file://supabase/**/*",
    "file://src/lib/supabase/**/*"
  ],
  "hooks": {},
  "toolsSettings": {},
  "useLegacyMcpJson": false
}